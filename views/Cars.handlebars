<h2>Available Cars</h2>

<button id="addCarBtn">Add New Car</button>

<div class="car-grid" id="carGrid">
    {{#if cars.length}}
        {{#each cars}}
            <div class="car-card" data-id="{{this.id}}">
                <img src="https://via.placeholder.com/250x150?text=Car" alt="Car Image">
                <h3>{{this.make}} {{this.model}}</h3>
                <p>Year: {{this.year}}</p>
                <button class="edit-btn">Edit</button>
                <button class="delete-btn">Delete</button>
            </div>
        {{/each}}
    {{else}}
        <p>No cars available. Click 'Add New Car' to get started!</p>
    {{/if}}
</div>

<div id="carModal" class="modal">
    <div class="modal-content">
        <span class="close-button">&times;</span>
        <h2 id="modalTitle">Add New Car</h2>
        <form id="carForm">
            <input type="hidden" id="carId" name="id">
            <div>
                <label for="make">Make:</label>
                <input type="text" id="make" name="make" required>
            </div>
            <div>
                <label for="model">Model:</label>
                <input type="text" id="model" name="model" required>
            </div>
            <div>
                <label for="year">Year:</label>
                <input type="number" id="year" name="year" required>
            </div>
            <button type="submit" id="submitBtn">Save Car</button>
        </form>
    </div>
</div>